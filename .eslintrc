{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaVersion": 2020,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "ignorePatterns": [
    "node_modules/**/*",
    "dist/"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "extends": [
    "plugin:react/recommended", 
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "react/prop-types": "off"
  },
  "globals": {
    "window": true
  }
}
